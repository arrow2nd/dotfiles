{
  // "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "height": 32, // Waybar height (to be removed for auto height)
  "spacing": 4, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": ["niri/workspaces"],
  "modules-right": [
    "tray",
    "cpu",
    "memory",
    "pulseaudio",
    "battery",
    "network",
    "bluetooth",
    "clock"
  ],
  "niri/workspaces": {
    "persistent_workspaces": {
      "1": [],
      "2": [],
      "3": []
    },
    "all-outputs": true,
    "active-only": false,
    "format": "{icon}",
    "format-icons": {
      "urgent": "!!",
      "focused": "",
      "default": ""
    }
  },
  "tray": {
    "icon-size": 14,
    "spacing": 10
  },
  "clock": {
    "tooltip-format": "<big>{:%Y %m}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}"
  },
  "cpu": {
    "format": "󰄛 {usage}%",
    "tooltip": true,
    "on-click": "niri msg action spawn -- $term_float bashtop"
  },
  "memory": {
    "format": "󰍛 {}%",
    "tooltip": true
  },
  "temperature": {
    "critical-threshold": 80,
    "format": " {temperatureC}°C"
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "󰁹 {capacity}%",
    "format-charging": "󱐋 {capacity}%",
    "format-plugged": "  {capacity}%"
  },
  "network": {
    "interval": 5,
    "format-wifi": "󰤨",
    "format-ethernet": "󰈀",
    "format-disconnected": "OFFLINE",
    "tooltip-format": "{essid} ({ifname}) : {ipaddr}",
    "on-click": "niri msg action spawn -- $term_float nmtui"
  },
  "bluetooth": {
    "format": "",
    "format-disabled": "󰂲",
    "on-click": "niri msg action spawn -- $term_float bluetuith",
    "on-click-right": "rfkill toggle bluetooth"
  },
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "󰕾 {volume}%{format_source}",
    "format-muted": "󰸈{format_source}",
    "format-source": " 󰍬",
    "format-source-muted": " 󰍭",
    "on-click": "pavucontrol",
    "on-click-right": "niri msg action spawn -- $volume_toggle_mute",
    "on-scroll-up": "niri msg action spawn -- $volume_up",
    "on-scroll-down": "niri msg action spawn -- $volume_down"
  }
}
