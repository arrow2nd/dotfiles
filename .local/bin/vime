#!/bin/bash -e

# Thanks! : https://gist.github.com/kuuote/4b2feda31d80fc8266fc562fc7f89c7f

tmp=/tmp/vime
opts=""

# --amend オプションが無い場合は新規作成
if [[ "$1" != "--amend" ]]; then
  [[ -f ${tmp} ]] && rm ${tmp}
  touch ${tmp}
  opts="-c start"
fi

nvim ${opts} ${tmp} || exit 1

# 改行を保ったままコピー
if [ "$(uname)" == 'Darwin' ]; then
  cat $tmp | pbcopy
else
  cat $tmp | xsel -bi
fi
