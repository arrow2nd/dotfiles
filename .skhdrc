# Reload yabai
ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# changing the container layout
# alt - e : yabai -m space --layout bsp
# alt - s : yabai -m space --layout stack

# focus window
cmd - x : yabai -m window --focus recent
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# move window
shift + cmd - h : yabai -m window --warp west
shift + cmd - j : yabai -m window --warp south
shift + cmd - k : yabai -m window --warp north
shift + cmd - l : yabai -m window --warp east

shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5
shift + alt - 6 : yabai -m window --space 6

# increase window size
shift + cmd - u : yabai -m window --resize left:-20:0
shift + cmd - i : yabai -m window --resize bottom:0:20
shift + cmd - o : yabai -m window --resize top:0:-20
shift + cmd - p : yabai -m window --resize right:20:0

# decrease window size
shift + alt - u : yabai -m window --resize left:20:0
shift + alt - i : yabai -m window --resize bottom:0:-20
shift + alt - o : yabai -m window --resize top:0:20
shift + alt - p : yabai -m window --resize right:-20:0

# toggle window fullscreen zoom
cmd - f : yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
shift + cmd - f : yabai -m window --toggle native-fullscreen

# toggle window split type
cmd - e : yabai -m window --toggle split

# float / unfloat window and restore position
cmd + shift - space : yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2
