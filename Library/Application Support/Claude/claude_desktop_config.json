{
  "mcpServers": {
    "vv-mcp": {
      "command": "mise",
      "args": [
        "exec",
        "bun@1",
        "--",
        "bunx",
        "-y",
        "@arrow2nd/vv-mcp@latest"
      ],
      "env": {
        "VOICEVOX_URL": "http://localhost:50021",
        "DEFAULT_VOICE_ID": "47",
        "DEFAULT_SPEED": "1.0"
      }
    },
    "playwright": {
      "command": "mise",
      "args": [
        "exec",
        "bun@1",
        "--",
        "bunx",
        "-y",
        "@playwright/mcp@latest"
      ]
    },
    "claude_code": {
      "command": "mise",
      "args": [
        "exec",
        "claude@1",
        "--",
        "claude",
        "mcp",
        "serve"
      ],
      "env": {}
    }
  }
}